<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">    

    <TextView
        android:id="@+id/tvStep"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:text="Шаг:"
        android:textColor="@color/black" />
    
	<EditText
	    android:id="@+id/etStep"
	    android:inputType="number"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:maxLines="1"
	    android:singleLine="true"
	    android:textSize="@dimen/et_text_size" />
	
    <TextView
        android:id="@+id/tvMinVal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:text="Минимальное значение:"
        android:textColor="@color/black" />
    
	<EditText
	    android:id="@+id/etMinVal"
	    android:inputType="number"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:maxLines="1"
	    android:singleLine="true"
	    android:textSize="@dimen/et_text_size" />
	
    <TextView
        android:id="@+id/tvMaxVal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:text="Максимальное значение:"
        android:textColor="@color/black" />
    
	<EditText
	    android:id="@+id/etMaxVal"
	    android:inputType="number"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:maxLines="1"
	    android:singleLine="true"
	    android:textSize="@dimen/et_text_size" />
            
    <Button
        android:id="@+id/btnSaveStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:padding="5dp" 
        android:layout_gravity="center"
        style="@style/button"/>
</LinearLayout>
