<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_bottom"
            android:paddingLeft="@dimen/layout_left"
            android:paddingRight="@dimen/layout_right"
            android:paddingTop="@dimen/layout_top" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="false"
                android:text="Выберите название и формат для нового фактора. Формат зависит от того, что вы собираетесь отмечать; наличие или отсутствие фактора, числовое значение(величину) фактора, два числовых значения, временной интервал присутствия фактора, величину фактора в  течение указанного периода времени. Приведенные примеры помогают правильно выбрать формат."
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1." />

                <EditText
                    android:id="@+id/etName1"
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName" >
                </EditText>

                <Button
                    android:id="@+id/btnQuestion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2." />

                <EditText
                    android:id="@+id/etName2"
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName" >
                </EditText>

                <EditText
                    android:id="@+id/etName2_Number1"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Число"
                    android:inputType="numberDecimal" >
                </EditText>

                <Button
                    android:id="@+id/btnQuestion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="3." />

                <EditText
                    android:id="@+id/etName3"
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName" >
                </EditText>

                <EditText
                    android:id="@+id/etName3_Number1"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Число"
                    android:inputType="numberDecimal" >
                </EditText>

                <EditText
                    android:id="@+id/etName3_Number2"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Число"
                    android:inputType="numberDecimal" >
                </EditText>

                <Button
                    android:id="@+id/btnQuestion3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="4." />

                <EditText
                    android:id="@+id/etName4"
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName" >
                </EditText>

                <Button
                    android:id="@+id/btnName4_time1"
                    style="@style/button"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:text="Время начала"
                    android:textSize="12sp" >
                </Button>

                <Button
                    android:id="@+id/btnName4_time2"
                    style="@style/button"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:text="Время окончания"
                    android:textSize="12sp" >
                </Button>

                <Button
                    android:id="@+id/btnQuestion4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="5." />

                <EditText
                    android:id="@+id/etName5"
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName" >
                </EditText>

                <Button
                    android:id="@+id/btnName5_time1"
                    style="@style/button"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:text="Время начала"
                    android:textSize="12sp" >
                </Button>

                <Button
                    android:id="@+id/btnName5_time2"
                    style="@style/button"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:text="Время окончания"
                    android:textSize="12sp" >
                </Button>

                <EditText
                    android:id="@+id/etName5_Number1"
                    android:layout_width="@dimen/default_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:hint="Число"
                    android:inputType="numberDecimal" >
                </EditText>

                <Button
                    android:id="@+id/btnQuestion5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/et_value_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Степень влияния на организм человека" />

                <LinearLayout
                    android:id="@+id/ll6_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="#0F0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Положительное"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll6_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="#FF0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Нейтральное"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll6_3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="#F00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Отрицательное"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Сохранить" />

</LinearLayout>