<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->             
    </style>       
    

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle" parent="@android:style/Widget.TextView">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/tv_title_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:width">@dimen/tv_title_width</item>
    </style>
    

    <style name="EditTextField" parent="@android:style/Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:ems">18</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="button_small_text" parent="@style/button">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_period" parent="button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <!-- <item name="android:background">@drawable/button_period</item> 
        <item name="android:textColor">#000</item>        
        <item name="android:gravity">center</item>-->
    </style>    
    
    

    <style name="button_hide_plot" parent="button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>    

</resources>